<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".statistics"
    android:background="@drawable/forest1">

    <TextView
        android:id="@+id/textsoil"
        android:layout_width="189dp"
        android:layout_height="70dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="131dp"
        android:layout_marginBottom="306dp"
        android:text="soil moisture level"
        android:textAlignment="center"
        android:textColor="#FFEB3B"
        android:textSize="16sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/texthumid"
        android:layout_width="143dp"
        android:layout_height="69dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="542dp"
        android:text="humidity"
        android:textAlignment="center"
        android:textColor="#3F51B5"
        android:textSize="16sp"
        android:textStyle="bold|italic" />

    <ToggleButton
        android:id="@+id/togglebutton"
        android:layout_width="141dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="137dp"
        android:layout_marginBottom="125dp"
        android:background="@drawable/buttonshapewhitebg"
        android:textColor="#F3F2ED"
        android:textOff="off"
        android:textOn="On" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="151dp"
        android:layout_marginBottom="94dp"
        android:text="water pump switch"
        android:textColor="#00BCD4"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/texttemp"
        android:layout_width="wrap_content"
        android:layout_height="73dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="250dp"
        android:layout_marginBottom="540dp"
        android:text="temperature "
        android:textAlignment="center"
        android:textColor="#3F51B5"
        android:textSize="16sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/tempread"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="60dp"
        android:layout_marginBottom="543dp"
        android:gravity="center"
        android:hint="34C"
        android:textColor="#FAF6F6"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/humidread"
        android:layout_width="68dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="159dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="546dp"
        android:layout_toEndOf="@+id/tempread"
        android:gravity="center"
        android:hint="40%"
        android:textColor="#FBF8F8"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/soilread"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="193dp"
        android:layout_marginBottom="308dp"
        android:gravity="center"
        android:hint="75%"
        android:textColor="#F6F0F0"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="-2dp"
        android:layout_marginTop="-1dp"
        android:layout_marginEnd="0dp"
        android:background="@drawable/side_nav_bar"
        android:text="fetching sensor data"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold|italic" />


    <ProgressBar
        android:id="@+id/progress1"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="wrap_content"
        android:layout_height="209dp"
        android:layout_alignTop="@+id/progress2"
        android:layout_alignBottom="@+id/progress2"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="-24dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="211dp"
        android:layout_marginBottom="0dp"
        android:indeterminate="false"
        android:progress="0"
        android:progressDrawable="@drawable/circle" />

    <ProgressBar
        android:id="@+id/progress2"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="209dp"
        android:layout_height="194dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="202dp"
        android:layout_marginTop="153dp"
        android:layout_marginEnd="-18dp"
        android:layout_marginBottom="460dp"
        android:indeterminate="false"
        android:progress="0"
        android:progressDrawable="@drawable/circle" />

    <ProgressBar
        android:id="@+id/progress3"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="254dp"
        android:layout_height="267dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="64dp"
        android:layout_marginTop="386dp"
        android:layout_marginEnd="77dp"
        android:indeterminate="false"
        android:progress="0"
        android:progressDrawable="@drawable/circle" />

</RelativeLayout>